{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="col-md-10">
    <h1>User</h1>
</div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>

        </tbody>
    </table>
    <div class="col-md-10">
        <a href="{{ path('user_index') }}" class="btn btn-primary">back to list</a>

        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning">edit</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
