{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
<div class="col-md-10">
    <h1>Post</h1>
</div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ post.user.username }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Featured_image</th>
                <td>{% if(post.featuredImage) %} <img src="{{ asset('/uploads/featured_images/thumbs/' ~ post.featuredImage) }}">{% endif %}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{% if(post.file) %} <a href="{{ asset('/uploads/' ~ post.file) }}">{{ post.file }}</a>{% endif %} </td>
            </tr>
        </tbody>
    </table>

    <div class="col-md-10">
        <a href="{{ path('post_index') }}" class="btn btn-primary">back to list</a>

        <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-warning">edit</a>

        {{ include('post/_delete_form.html.twig') }}
    </div>
{% endblock %}
