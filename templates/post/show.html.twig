{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Featured_image</th>
                <td>{% if(post.featuredImage) %} <img src="{{ asset('/uploads/featured_images/thumbs/' ~ post.featuredImage) }}">{% endif %}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{% if(post.file) %} <a href="{{ asset('/uploads/' ~ post.file) }}">{{ post.file }}</a>{% endif %} </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
