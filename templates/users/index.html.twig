{% extends 'base.html.twig' %}

{% block title %}Users!{% endblock %}


{% block body %}
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>

        <h1>Users</h1>
        <ul>
            {% for user in users %}
                <li> {{ user.username }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <div class="mb-3">
            You need to log in to see all users, <a href="{{ path('app_login') }}">Login</a>
        </div>
    {% endif %}
{% endblock %}



