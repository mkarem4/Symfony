{% extends 'base.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Welcome To Our Konafa Website! âœ…</h1>

        <p>This is demo for konafa website So Enjoy :)</p> <br>

        {% if not is_granted('ROLE_USER') %}
            To login please click <a href="{{ path('app_login') }}">here</a>
        {% endif %}
    </div>


    {% block content %}
        {% for post in posts %}
            <a href="{{ path('post_details',{'id': post.id}) }}">
                <div class="card">
                    <div>{{ post.title }}</div>
                    <div>{{ post.content }}</div>
                    <div>{% if(post.featuredImage) %} <img
                            src="{{ asset('/uploads/featured_images/thumbs/' ~ post.featuredImage) }}">{% endif %}</div>
                    <div>{% if(post.file) %} <a
                            href="{{ asset('/uploads/' ~ post.file) }}">{{ post.file }}</a>{% endif %} </div>

                </div>
            </a>
        {% endfor %}
    {% endblock %}
{% endblock %}
